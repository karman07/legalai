        {
          "name": "Register User (Personal)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Karman Singh\",\n  \"email\": \"karman@example.com\",\n  \"password\": \"Karman@123456\",\n  \"registrationType\": \"personal\",\n  \"phoneNumber\": \"+919876543210\",\n  \"address\": \"123 Street, Delhi, India\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register User (Institute)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Karman Singh\",\n  \"email\": \"karman.student@university.edu\",\n  \"password\": \"Karman@123456\",\n  \"registrationType\": \"institute\",\n  \"instituteId\": \"STU2024001\",\n  \"instituteName\": \"Delhi University\",\n  \"phoneNumber\": \"+919876543210\",\n  \"address\": \"123 Street, Delhi, India\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
